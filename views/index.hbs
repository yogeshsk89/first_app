<div class="container">
	<form action="/login_action" method="post">
		<div class="form-group">
			<label for="email">Email address:</label>
			<input type="email" class="form-control" id="email" name="email_id" value="yogesh@healthdekho.com">
		</div>
		<div class="form-group">
			<label for="pwd">Password:</label>
			<input type="password" class="form-control" id="password" name="password" value="123456">
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
	</form>

	{{# if errors }}
	    {{# each errors }}
	          <p class="alert alert-danger">{{ this.msg }}</p>
	    {{/each}}
	{{/if}}
</div>